<launch>

    <master auto="start"/>

	<node name="stereo_image_proc_front_hazcam" pkg="stereo_image_proc" type="stereo_image_proc" output="screen" ns="/curiosity_mars_rover/camera_fronthazcam/" >
		<param name="queue_size" value="2000" />
		<param name="approximate_sync" value="True" />
	</node>
    <node name="pointcloud_to_laserscan_front_hazcam" pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" output="screen" ns="/curiosity_mars_rover/camera_fronthazcam/">
        <remap from="cloud_in" to="/curiosity_mars_rover/camera_fronthazcam/points2" />
        <remap from="scan" to="/curiosity_mars_rover/camera_fronthazcam/scan" />
        <param name="target_frame" value="base_link" />
        <param name="min_height" value="-0.3" />
        <param name="max_height" value="5" />
        <param name="range_min" value="0.1" />
        <param name="range_max" value="20" />
        <param name="use_inf" value="true" />
    </node>
    <node name="stereo_image_proc_back_hazcam" pkg="stereo_image_proc" type="stereo_image_proc" output="screen" ns="/curiosity_mars_rover/camera_backhazcam/" >
		<param name="queue_size" value="2000" />
		<param name="approximate_sync" value="True" />
	</node>
    <node name="pointcloud_to_laserscan_back_hazcam" pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" output="screen" ns="/curiosity_mars_rover/camera_backhazcam/">
        <remap from="cloud_in" to="/curiosity_mars_rover/camera_backhazcam/points2" />
        <remap from="scan" to="/curiosity_mars_rover/camera_backhazcam/scan" />
        <param name="target_frame" value="base_link" />
        <param name="min_height" value="-0.4" />
        <param name="max_height" value="5" />
        <param name="range_min" value="0.1" />
        <param name="range_max" value="20" />
        <param name="use_inf" value="true" />
    </node>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find curiosity_mars_rover_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find curiosity_mars_rover_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <rosparam file="$(find curiosity_mars_rover_navigation)/config/costmap_obstacles_stereo_camera.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find curiosity_mars_rover_navigation)/config/costmap_obstacles_stereo_camera.yaml" command="load" ns="local_costmap" />

        <rosparam file="$(find curiosity_mars_rover_navigation)/config/map/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find curiosity_mars_rover_navigation)/config/map/global_costmap_params.yaml" command="load" /> 

        <rosparam file="$(find curiosity_mars_rover_navigation)/config/base_local_planner_params.yaml" command="load" />

        <remap from="cmd_vel" to="/curiosity_mars_rover/ackermann_drive_controller/cmd_vel"/>
        <remap from="odom" to="/curiosity_mars_rover/odom" />
    </node>

</launch> 
